<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sizerite.cs465.sizerite.SizeRiteFitActivity">

    <TextView
        android:id="@+id/editText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="32"
        android:textAlignment="center"
        android:fontFamily="@font/dancingscript"
        android:textSize="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.311" />

    <TextView
        android:id="@+id/textView_size"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dancingscript"
        android:text="is the perfect fit for you!"
        android:textSize="40dp"
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/editText"
        tools:layout_editor_absoluteY="252dp" />
    <LinearLayout
        android:id="@+id/button_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textView_size"
        android:layout_marginTop="20dp"
        android:gravity="center">

        <Button
            android:id="@+id/tight"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="22dp"
            android:text="Tight"/>
        <Button
            android:id="@+id/perfect"
            android:layout_width="180dp"
            android:layout_height="60dp"
            android:textSize="22dp"
            android:text="Perfect"/>
        <Button
            android:id="@+id/loose"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:textSize="22dp"
            android:text="Loose"/>

    </LinearLayout>

    <Button
        android:id="@+id/done_sizerite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="15dp"
        android:background="#4cba66"
        android:text="Done"
        android:textColor="#ffffff"
        android:textSize="22dp"

        app:layout_constraintTop_toBottomOf="@id/button_group" />
</android.support.constraint.ConstraintLayout>


